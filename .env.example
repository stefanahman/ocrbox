# Operation Mode
MODE=local  # Options: 'local' (dev mode) or 'dropbox' (production)

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash  # Options: gemini-1.5-flash, gemini-1.5-pro

# Dropbox OAuth Configuration (required for MODE=dropbox)
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret
DROPBOX_REDIRECT_URI=http://localhost:8080/oauth/callback

# Multi-tenant Access Control
# Comma-separated list of allowed Dropbox account IDs or emails
ALLOWED_ACCOUNTS=dbid:AAH4f99T0taONIb-OurWxbNQ6ywGRopQngc,user@example.com

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_ENABLED=true

# Email Notifications (future)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Processing Options
POLL_INTERVAL=30  # Seconds between checking for new files
MAX_RETRIES=3  # Maximum API retry attempts
RETRY_DELAY=2  # Initial retry delay in seconds

# OAuth Server Configuration
OAUTH_SERVER_PORT=8080
OAUTH_SERVER_HOST=0.0.0.0
OAUTH_ALWAYS_ENABLED=true  # Keep OAuth server running for multi-user authorization

# v2 Tag Features
ENABLE_TAGS=true  # Enable automatic tagging/categorization
ENABLE_AUTO_TITLES=true  # Generate descriptive titles for output files
ENABLE_TAG_LEARNING=true  # Learn new tags from user-modified filenames

# v2 Confidence Thresholds
PRIMARY_TAG_CONFIDENCE_THRESHOLD=80  # Minimum confidence for primary tag (0-100)
ADDITIONAL_TAG_CONFIDENCE_THRESHOLD=70  # Minimum confidence for additional tags (0-100)

# v2 Output Formatting
MAX_TITLE_LENGTH=30  # Maximum characters for auto-generated titles
MAX_TAGS_PER_FILE=3  # Maximum number of tags per file (1-5)

# v2 Detailed Logging
ENABLE_DETAILED_LOGS=true  # Write detailed logs to /Logs/ directory
